#!/bin/sh


echo " ██████╗ ███████╗██████╗ ██╗    ██╗███╗   ███╗██████╗ ██╗   ██╗██████╗  █████╗ ██████╗  ██████╗██╗  ██╗        ";
echo " ██╔══██╗██╔════╝██╔══██╗██║    ██║████╗ ████║██╔══██╗╚██╗ ██╔╝██╔══██╗██╔══██╗██╔══██╗██╔════╝██║  ██║		     ";
echo " ██████╔╝███████╗██████╔╝██║ █╗ ██║██╔████╔██║██████╔╝ ╚████╔╝ ██║  ██║███████║██████╔╝██║     ███████║	       ";
echo " ██╔══██╗╚════██║██╔═══╝ ██║███╗██║██║╚██╔╝██║██╔══██╗  ╚██╔╝  ██║  ██║██╔══██║██╔══██╗██║     ██╔══██║	       ";
echo " ██████╔╝███████║██║     ╚███╔███╔╝██║ ╚═╝ ██║██████╔╝   ██║   ██████╔╝██║  ██║██║  ██║╚██████╗██║  ██║	       ";
echo " ╚═════╝ ╚══════╝╚═╝      ╚══╝╚══╝ ╚═╝     ╚═╝╚═════╝    ╚═╝   ╚═════╝ ╚═╝  ╚═╝╚═╝  ╚═╝ ╚═════╝╚═╝  ╚═╝        ";
                                                                                                      
sleep 3

sudo -v
while true; do
  sudo -nv; sleep 1m
  kill -0 $$ 2>/dev/null || exit
done &

#Instalar bspwmbydarch
cd 
sudo pacman -S bspwm sxhkd --noconfirm --needed
git clone https://github.com/darch7/bspwmbydarch
cp -R bspwmbydarch/config/* $HOME/.config/ 
cp -R bspwmbydarch/.local $HOME/ 
sudo chmod +x .local/bin/scripts
cp -R bspwmbydarch/home/.[^.]* $HOME/ 
cd bspwmbydarch/compilar/st 
sudo make clean install 
cd 
sudo pacman -S zsh-theme-powerlevel10k papirus-icon-theme p7zip unrar zip unzip gzip bzip2 alsa-plugins alsa-utils ttf-dejavu ttf-liberation ttf-bitstream-vera wmname rofi lxrandr polkit-gnome ueberzug slock fzf telegram-desktop neofetch calcurse bc pcmanfm xarchiver lxappearance leafpad transmission-gtk nitrogen pavucontrol geany neovim sxiv blueberry ffmpeg maim xclip xdotool mpv unclutter dunst zathura zathura-pdf-mupdf htop zsh zsh-autosuggestions zsh-history-substring-search zsh-completions zsh-syntax-highlighting ranger ttf-joypixels adobe-source-han-sans-jp-fonts lightdm slim adobe-source-han-serif-jp-fonts awesome-terminal-fonts ttf-font-awesome --needed --noconfirm 
sudo systemctl enable slim
sudo cp -R bspwmbydarch/root/fzf/* /usr/share/fzf
sudo cp -R bspwmbydarch/root/gtk/iconos/* /usr/share/icons
sudo cp -R bspwmbydarch/root/gtk/temas/* /usr/share/themes
sudo cp -R bspwmbydarch/root/wall/* /usr/share/
paru -S gtk3-nocsd-git ttf-meslo-nerd-font-powerlevel10k picom-ibhagwan-git polybar-git fzf-extras brave-bin --noeditmenu --noconfirm 
paru -Rns i3-wm --noeditmenu --noconfirm 
sudo pacman -Rns $(pacman -Qtdq) --noconfirm
chsh -s /bin/zsh
clear

neofetch
sleep 5
uname -r 
sleep 3

echo "BspwmbyDarch instalado"
sleep 5
clear
reboot
